<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.user.name, '#' %></td>
        <td><%= link_to book.title, book %></td>
        <td><p><%= book.body %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
