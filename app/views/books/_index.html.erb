<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to book.user do %>
            <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
          <% end %>
        </td>
        <td><%= link_to book.title, book %></td>
        <td><p><%= book.body %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
