<h2>Books</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to book.user do %>
            <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "50x50" %>
          <% end %>
        </td>
        <td><%= link_to book.title, book %></td>
        <td><p><%= book.body %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>
