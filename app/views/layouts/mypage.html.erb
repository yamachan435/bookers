<!DOCTYPE html>
<html>
  <%= render 'shared/header_tag' %>
  <body>
    <%= render 'shared/header' %>
    <div class="body">
      <p id="notice"><%= notice %></p>
      <div class="container">
        <div class="row">
          <div class="col-xs-3">
            <%= render 'users/show', user: current_user %>
            <%= render 'books/new', book: current_user.books.build %>
          </div>
          <div class="col-xs-9">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
